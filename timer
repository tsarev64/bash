#!/bin/bash
#[31mДо старта осталось: 31 это цвет
#30 черный
#31 красный
#32 зеленый
#33 жёлтый/оранжевый
#34 голубой
#35 фиолетовый
#36 цвета морской волны
#37 светло-серый


timelimit=СЮДА ВВОДИМ ВРЕМЯ НЕОБХОДИМОЕ ДЛЯ ОТСЧЕТА в секундах
name=""

for (( i = 1 ; i <= $timelimit; i++ )); do
echo -ne "\r\e[31mДо старта осталось: $(expr $timelimit - $i) секунд.\e[0m"
[ ! -z "$name" ] && { break ; }
read -t 1 name
done
